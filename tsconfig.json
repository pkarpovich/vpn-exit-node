{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "outDir": "dist",
    "module": "es2022",
    "declaration": false,
    "target": "es2022",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  }
}
